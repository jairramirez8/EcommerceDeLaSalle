@page "{id:int?}"
@model DeLaSalle.Eccommerce.WebSite.Pages.Brand.Edit

<div class="container-fluid">
    
    <div class="row">
        <div class="col-md-1"></div>
        
        <div class="col-md-10">
            <h2>Editing</h2>
            
            <form method="post">
                
                <input type="hidden" asp-for="Brand.Id" />
                
                <div class="form-group">
                    <label asp-for="Brand.Name"></label>
                    <input asp-for="Brand.Name" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="Brand.Name"></span>

                </div>
                
                <div class="form-group">
                    <label asp-for="Brand.Description"></label>
                    <input asp-for="Brand.Description" class="form-control" maxlength="100"/>
                    <span class="text-danger" asp-validation-for="Brand.Description"></span>
                </div>
                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>An error</li>
                            }
                            
                        </ul>    
                    </div>
                }
                
                
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Save</button> 
                        <a class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
                
            </form>
            
        </div>
        
        <div class="col-md-1"></div>
    </div>
    
</div>